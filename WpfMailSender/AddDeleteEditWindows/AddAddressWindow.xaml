<Window x:Class="WpfMailSender.AddDeleteEditWindows.AddAddressWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfMailSender.AddDeleteEditWindows"
        mc:Ignorable="d"
        Title="AddAddressWindow" Height="300" Width="300" MinWidth="229" MinHeight="229" MaxWidth="301" MaxHeight="301">
            
    <Grid>
        <Label Content="Address" Margin="50,30,190,0" VerticalAlignment="Top"/>
                <TextBox x:Name="tbAddress" Height="23" Margin="50,60,50,0" TextWrapping="Wrap" VerticalAlignment="Top"/>
                <Label Content="Smtp" Margin="50,90,190,0" VerticalAlignment="Top"/>
                <TextBox x:Name="tbSmtp" Height="23" Margin="50,120,50,0" TextWrapping="Wrap" VerticalAlignment="Top"/>
                <Label Content="Port" Margin="50,150,190,0" VerticalAlignment="Top"/>
                <TextBox x:Name="tbPort" Height="23" Margin="50,180,50,0" TextWrapping="Wrap" VerticalAlignment="Top"/>
                <Button Content="OK" Margin="108,222,109,0" VerticalAlignment="Top" Click="Button_Click"/>

    </Grid>
</Window>
